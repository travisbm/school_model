<p id="notice"><%= notice %></p>

<p>
  <strong>School name:</strong>
  <%= @school.school_name %>
</p>

<p>
  <strong><%= link_to 'Teachers:' %></strong>
  <%= @school.teachers.count %>
</p>

<p>
  <strong><%= link_to 'Students:' %></strong>
  <% student_count = 0 %>
  <% @school.teachers.each do |teacher| %>
  <% student_count += teacher.students.count %>
  <% end %>
  <%= student_count %>
</p>

<p>
  <strong>Courses:</strong>
  <%= @school.teachers.count %>
</p>

<h2>Listing Teachers</h2>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @school.teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.first_name %></td>
        <td><%= teacher.last_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Listing Students</h2>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @school.teachers.each do |teacher| %>
      <% teacher.students.each do |teacher| %>
        <tr>
          <td><%= teacher.first_name %></td>
          <td><%= teacher.last_name %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_school_path(@school) %> |
<%= link_to 'Back', schools_path %>
